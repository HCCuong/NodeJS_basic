<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<body>
    <!-- top meunu -->
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload-file">Upload file</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <!-- Content -->
    <div class="w3-container">
        <h2>List user table</h2>

        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].firstName %>
                        </td>
                        <td>
                            <%= dataUser[i].lastName %>
                        </td>
                        <td>
                            <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>
                            <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                                <button type="submit">Edit</button>
                            </form>
                            <form action="/delete-user" method="POST">
                                <input type="hidden" name="userId" value="<%= dataUser[i].id %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

        </table><br>


        <h2> Create new user</h2>
        <form action="/create-new-user" method="POST">
            <label for="fname">First name:</label><br>
            <input type="text" id="fname" name="fname"><br>
            <label for="lname">Last name:</label><br>
            <input type="text" id="lname" name="lname"><br><br>
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email"><br><br>
            <label for="address">Address:</label><br>
            <input type="text" id="address" name="address"><br><br>
            <input type="submit" value="Submit">
        </form>
    </div>

    <!--<img src="/image/avatar.jpg" alt=""> -->
</body>

</html>